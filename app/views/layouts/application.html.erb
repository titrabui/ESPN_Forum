<!DOCTYPE html>
<html>
  <head>
    <title>ESPNForum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default" style="margin-bottom: 0;">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "ESPN FAN FORUM", root_path, class: "navbar-brand" %>
        </div>

        <ul class="navbar-nav nav navbar-right" style="margin-top: 8px">
          <% if user_signed_in? %>
            <li style="margin-top: 13px; margin-right: 5px; text-transform: lowercase; color: rgb(0, 121, 211);"><%= current_user.email %></li>
            <li style="margin-top: 7px"><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "espn-btn espn-btn-default" %></li>
          <% else %>
            <li style="margin-right: 5px"><%= link_to "Log In", new_user_session_path, class: "espn-btn espn-btn-default" %></li>
            <li><%= link_to "Sign Up", new_user_registration_path, class: "espn-btn espn-btn-primary" %></li>
          <% end %>
        </ul>

        <% if user_signed_in? %>
          <p><%= link_to "Post News", new_message_path, class: "navbar-text espn-btn espn-btn-primary" %></p>
        <% end %>
      </div>
    </nav>

    <% if current_page?(root_path)%>
      <nav class="navbar">
        <img style="width: 100%; height: auto; max-width:100%; max-height:100%;background-position: center center; background-repeat: no-repeat;" src="<%= image_path("carouselimage.jpg") %>" class="img-fluid" alt="Responsive image">
      </nav>
    <% end %>

    <div class="container" style="margin-top: 10px;">
      <%= yield %>
    </div>
    <footer class="blog-footer">
      <p>ESPN Forum by <a href="https://twitter.com/mdo">@titrabui</a>.</p>
      <p>
        <a href="#">Back to top</a>
      </p>
    </footer>
  </body>
</html>
