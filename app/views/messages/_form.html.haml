= simple_form_for @message do |f|
  = f.input :title, label: "Post Title"
  = f.input :sub_title, label: "Post Sub Title"
  .form-group
    = f.input :description, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control"
  .div.text-right
    = f.button :submit, class: "espn-btn espn-btn-primary"